{% extends "adm_layout.njk" %}

{% block content %}

  <div class="row">
    <div class="col-auto mr-auto">
      <p class="h3">Receita:{{receita.title}}</p>
    </div>
    <div class="col-auto">
      <a href="/admin/recipe/edit?id={{receita.id}}" class="btn btn-outline-primary" role="button">Editar receita</a>
    </div>
  </div>

  <div class="row mt-5">
    <img class="img-fluid rounded mx-auto d-block mb-4" src="{{receita.image}}" alt="{{receita.title}}">
  </div>

  <h2 class="card-title text-center">{{receita.title}}</h5>
  <h4 class="card-subtitle mb-5 text-muted text-center">por
    {{receita.author}}</h4>

  <div id="accordion">
    <div class="card">
      <div class="card-header" id="headingOne">
        <h5 class="mb-0">
          <button class="btn btn-link text-decoration-none" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            <span class="h4">Ingredientes<span class="badge badge-light ">
                <i class="fas fa-hamburger"></i>
              </span>
            </span>
          </button>
        </h5>
      </div>

      <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
        <div class="card-body">
          <ul class="list-group list-group-flush">
            {% for ingrediente in receita.ingredients %}
              <li class="list-group-item">
                {{ingrediente}}
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header" id="headingTwo">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed text-decoration-none" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
            <span class="h4">Modo de preparo<span class="badge badge-light ">
                <i class="fas fa-utensils"></i>
              </i>
            </span>
          </span>
        </button>
      </h5>
    </div>
    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
      <div class="card-body">
        <h3>
          <small class="text-muted">{{receita.preparation}}</small>
        </h3>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header" id="headingThree">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          <span class="h4">Informações adicionais<span class="badge badge-light ">
              <i class="fas fa-info"></i>
            </i>
          </span>
        </span>
      </button>
    </h5>
  </div>
  <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
    <div class="card-body">
      <h3>
        <small class="text-muted">{{receita.information}}</small>
      </h3>
    </div>
  </div>
</div>

</div>

{% endblock %}